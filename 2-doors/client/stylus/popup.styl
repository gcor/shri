.popup
	position fixed
	left 0
	right 0
	bottom 0
	top 0
	background-color rgba(0,0,0,.3)
	transition opacity .3s
	display flex
	align-items center
	justify-content center

.popup_hidden
	pointer-events none
	opacity 0

.popup__content
	position relative
	width 100%
	height 100%
	max-width 400px
	background #000 url(../img/door_level_0.jpg) no-repeat center
	background-size cover

.popup__close
	position absolute
	top 16px
	right 16px
	font-size 24px
	color #fff
	cursor pointer

