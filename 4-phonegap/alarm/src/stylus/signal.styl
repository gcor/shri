.signal
	background-color #FFF
	border-radius 5px
	margin-bottom 15px
	white-space nowrap
	&.on
		.signal__switcher
			border-color #6EB229
			&:after
				right -15px
				background-color #6EB229
	&:not(.edit)
		.signal__repeat,
		.signal__cell_type_delete,
		.signal__keyboard
			display none
	&.edit
		.signal__description
			display node
	&:last-child
		margin-bottom 0
			
.signal__header
	display flex
	width 100%
	padding 0 20px
	box-sizing border-box

.signal__cell 
	display flex
	align-items center
	padding 20px 0;
	&_type
		&_time
			align-items flex-start
		&_delete
			width 40px
			margin-right 40px
		&_description
			width 100%

.signal__time
	font-size 80px
	line-height 70px
	display flex

.signal__char
	&:nth-child(2):after {
		content ':'
		color #000;
	}
	&.on
		color #D0021B

.signal__description
	max-width 90px
	text-transform uppercase
	padding-left 10px
	align-self flex-start
	font-size 16px
	box-sizing border-box
	white-space normal

.signal__delete
	width 30px
	height 30px
	background-image url('../img/delete.svg')
	background-repeat no-repeat
	margin 0 auto

.signal__switcher
	display inline-block
	width 38px
	height 24px
	border 3px solid #D0021B
	border-radius 30px
	position relative
	transition border .2s
	box-sizing border-box
	margin-right 15px
	&:after
		content ''
		position absolute
		top -6px
		width 30px
		height 30px
		border-radius 50%
		transition right .2s, background .2s
		right 15px
		background-color #D0021B
