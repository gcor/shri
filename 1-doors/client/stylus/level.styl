.level
	position relative
	min-width 320px
	background-size cover
	background-position left top
	background-repeat no-repeat

.level_0
	background-image url(../img/level_0_bg.jpg)
	height 180px
	position relative
	&:after
		content ' '
		display block
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		background url(../img/logo.png) no-repeat center 25px
		background-size contain
		pointer-events none

.level_1
	background-image url(../img/level_1_bg.png)
	height 235px

.level_2
	background-image url(../img/level_2_bg.png)
	height 235px

.level_3
	background-image url(../img/level_3_bg.png)
	height 235px

.level_4
	background-image url(../img/level_4_bg.png)
	height 75px

.door
	position absolute
	bottom 0
	background url(../img/door.png) no-repeat top left
	width 64px
	height 100px
	cursor pointer

.door_locked
	background url(../img/door_locked.png) no-repeat top left

.door_disabled
	opacity .7

.door_level_0
	right 2%

.door_level_1
	left 2%

.door_level_2
	right 2%

.box
	position absolute
	left 10%
	bottom 0
	background url('../img/box.png') no-repeat top left
	width 32px
	height 32px
	cursor pointer
