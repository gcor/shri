.programm
	padding 20px
	box-sizing border-box
	display inline-block
	vertical-align top
	width 25%

.programm__head
	margin-bottom 10px

.programm__logo
	width 50px
	display inline-block
	vertical-align middle

.programm__title
	font-size 16px
	display inline-block
	vertical-align middle
	font-weight bold

.programm__item
	line-height 18px
	padding-bottom 5px
	position relative
	&:hover .programm__info
		margin-top 0
		visibility visible
		opacity 1

.programm__info
	margin-top 20px
	transition opacity .3s, margin .3s
	z-index 10
	visibility hidden
	opacity 0

.programm__time
	width 50px
	display table-cell
	font-weight bold
	vertical-align top

.programm__text
	display table-cell

[data-time="live"]:before
	content 'Live'
	text-transform uppercase
	letter-spacing 1px
	font-size 12px
	font-weight bold
	color #e00
	margin-right 5px

#filter_sport:checked ~ .main [data-type="sport"],
#filter_sport:checked ~ .main [for="filter_sport"]
	color green

#filter_film:checked ~ .main [data-type="film"],
#filter_film:checked ~ .main [for="filter_film"]
	color brown

#filter_child:checked ~ .main [data-type="child"],
#filter_child:checked ~ .main [for="filter_child"]
	color #2196F3

#filter_sport:checked ~ .main [for="filter_sport"]
	background #DDFFDD

#filter_film:checked ~ .main [for="filter_film"]
	background #FFE4DB

#filter_child:checked  ~ .main [for="filter_child"]
	background #DBF4FF

[id="day_24"]:checked ~ .main [data-day="24"],
[id="day_25"]:checked ~ .main [data-day="25"],
[id="day_26"]:checked ~ .main [data-day="26"],
[id="day_27"]:checked ~ .main [data-day="27"],
[id="day_28"]:checked ~ .main [data-day="28"]
	display block

[id="day_24"]:checked ~ .main [for="day_24"],
[id="day_25"]:checked ~ .main [for="day_25"],
[id="day_26"]:checked ~ .main [for="day_26"],
[id="day_27"]:checked ~ .main [for="day_27"],
[id="day_28"]:checked ~ .main [for="day_28"]
	color orange
	border-bottom-color orange
