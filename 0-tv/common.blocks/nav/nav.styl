.nav
	display inline-block
	position relative
	padding 30px 10px

.nav__title
	letter-spacing 1px
	text-transform uppercase
	font-weight bold
	font-size 10px
	width 100%
	padding-bottom 5px
	text-align center

.nav_type_time
	float left
	.nav__item:hover
		color orange
		border-bottom 1px solid orange

.nav_type_filter
	float right

.nav__item
	display inline-block
	padding 5px 5px
	width 60px
	text-align center
	margin 0px 2px
	border-bottom 1px solid #DADADA
	-webkit-user-select none
	transition prop time